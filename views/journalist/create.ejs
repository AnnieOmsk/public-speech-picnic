<div class="col-xl-2"></div>
<div class="container col-xl-5">
    Здесь будет форма сабмита трансляции
    <a href="logout">Выйти</a>
    <% if(typeof(error) != "undefined"){ %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <%}%>
    <% if(typeof(success) != "undefined"){ %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <%}%>
    <form class="form-add-broadcast" role="form" method="post">
        <h2>Добавить трансляцию</h2>
        <div class="form-group">
            <label for="title" class="col-xl-1">Заголовок</label>
            <div class="col-xl-4">
                <input name="title" id="title" type="text" class="form-control" placeholder="Заголовок" required autofocus value="<%= form.title ? form.title : '' %>"/>
            </div>
            <div>
            </div>
        </div>
        <div class="form-group">
            <label for="lead" class="col-xl-1">Краткое описание</label>
            <div class="col-xl-4">
                <input name="lead" id="lead" type="text" class="form-control" placeholder="Краткое описание" required value="<%= form.lead ? form.lead : '' %>"/>
            </div>
            <div>
            </div>
        </div>
        <div class="form-group">
            <label for="content" class="col-xl-1">Текст</label>
            <div class="col-xl-4">
                <textarea name="content" id="content" class="form-control" placeholder="Текст трансляции" required><%= form.content ? form.content : '' %></textarea>
            </div>
        </div>
        <div class="form-group">
            <input type="hidden" role="uploadcare-uploader"
                   data-images-only="true"
                   data-multiple="true" />
        </div>
        <input id="group-uuid" type="hidden" name="group-uuid" value="" />
        <div class="form-group">
            <div class="col-xl-1">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Сохранить</button>
            </div>
        </div>
    </form>
</div>